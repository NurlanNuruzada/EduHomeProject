@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_SeccondLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="login">
                <div class="login-form-container" style="transform: translate(50%);">
                    <div class="login-text">
                        <h2>Reset password</h2>
                        <span>Please Register filling bellow.</span>
                    </div>
                    <div class="login-form">
                        <form class="needs-validation" method="post">
                          
                            <input type="hidden" asp-for="Token" />
                            <input type="hidden" asp-for="Email" />

                            <label asp-for="Password">New Password</label>
                            <input class="form-control" type="password" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>


                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input class="form-control" type="password" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="button-box">
                                <button type="submit" class="default-btn">Confirm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValudationScript" />
}

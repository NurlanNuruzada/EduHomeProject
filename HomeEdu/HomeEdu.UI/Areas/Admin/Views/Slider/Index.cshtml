@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<h1 style="color:cornflowerblue">Slider's List</h1>
<a style="margin:20px 0px " asp-action="Create" class="btn btn-primary">Create New Slider <i class="far fa-plus-square"></i></a>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>ImagePath</th>
                        <th>Title</th>
                        <th>Image Path</th>
                        <th>Decription</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                @{
                    var orderedBlogs = Model.OrderByDescending(slider => slider.Id);
                }

                @foreach (var slider in orderedBlogs)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@count</th>
                            <td><img width="150" src="\@slider.ImagePath" alt="section-title"></td>
                            <td>@slider.ImagePath</td>
                            <td>@slider.Title</td>
                            <td>@slider.Description</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@slider.Id" style="display:flex;align-items:center; gap: 10px; max-width: max-content;" class="btn btn-warning">Edit <i class="fas fa-edit"></i></a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@slider.Id" style="display:flex;align-items:center;gap: 10px; max-width: max-content;" class="btn btn-danger">Delete <i class="fas fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    </tbody>
                    count++;
                }



            </table>
        </div>

    </div>
</div>


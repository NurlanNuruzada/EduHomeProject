@model BlogCatagory
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 style="color:cornflowerblue">Create Blog Category</h3>
                <form method="post">
                    <div class="mb-3 row">
                        <label asp-for="Catagory" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Catagory" />
                            <span class="text-danger" asp-validation-for="Catagory"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                        <a asp-area="Admin" asp-controller="blog" asp-action="GetBlogCaragory"  class="btn btn-light ">Return</a>
                    </div>
                </form>
            </div>
        </div>
    </div> 
</div>


@model Blog
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0 font-size-18">Event Details</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Blog</a></li>
                            <li class="breadcrumb-item active">Event Details</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="pt-3">
                            <div class="row justify-content-center">
                                <div class="col-xl-8">
                                    <div>
                                        <div class="text-center">
                                            <div class="mb-4">
                                                <a href="javascript: void(0);" class="badge bg-light font-size-12">
                                                    <i class="bx bx-purchase-tag-alt align-middle text-muted me-1"></i> Event
                                                </a>
                                            </div>
                                            <h4>@Model?.Title</h4>
                                            <p class="text-muted mb-4"><i class="mdi mdi-calendar me-1"></i> @Model?.PostTime.ToString("dd MMMM, yyyy hh:mm tt")</p>
                                        </div>

                                        <hr>
                                        <div class="text-center">
                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <div>
                                                        <p class="text-muted mb-2">Category</p>
                                                        <h5 class="font-size-15">@Model?.BlogCatagory.Catagory</h5>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="mt-4 mt-sm-0">
                                                        <p class="text-muted mb-2">Posted By</p>
                                                        <h5 class="font-size-15">@Model?.PostedBy</h5>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="mt-4 mt-sm-0">
                                                        <p class="text-muted mb-2">Post Time</p>
                                                        <h5 class="font-size-15">@Model?.PostTime.ToString("dd MMMM, yyyy hh:mm tt")</h5>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <div class="mt-4 mt-sm-0">
                                                        <p class="text-muted mb-2">Comment Count</p>
                                                        <h5 class="font-size-15">@Model?.CommentCount</h5>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-2">
                                            <img src="\@Model.ImagePath" style=" width: 100%;height :360px" alt="Event Image" />
                                            <b> <p>EventDetail Image Path:</p></b><span>@Model?.ImagePath?</span>
                                        </div>
                                        <div class="mt-2">
                                            <div class="mt-2">
                                                <b><p>EventDetail Title:</p></b> <span>@Model?.Title</span>
                                            </div>
                                            <div class="mt-4">
                                                <div class="text-muted font-size-14">
                                                    <b>
                                                        <p>Description</p>
                                                    </b>
                                                    <p class="mb-4">@Html.Raw(@Model?.Comment)</p>
                                                </div>
                                                <hr>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a asp-area="Admin" asp-controller="blog" asp-action="Index" class="btn btn-light ">Return</a>
                        </div>
                    </div>
                </div>
            </div>

        </div> 
    </div>

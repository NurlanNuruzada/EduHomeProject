@{
    ViewData["Title"] = "AddSpeaker";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model UpdateSpeakerViewModel
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 style="color:cornflowerblue">Add Speaker</h3>
                <form method="post" enctype="multipart/form-data">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul>
                                @foreach (var key in ViewData.ModelState.Keys)
                                {
                                    foreach (var error in ViewData.ModelState[key].Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    }
                    @*default orarag get dir*@
                    <div class="mb-3 row">
                        <label asp-for="Image" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Image" />
                            <span class="text-danger" asp-validation-for="Image"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Name" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Surname" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Surname" />
                            <span class="text-danger" asp-validation-for="Surname"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Position" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Position" />
                            <span class="text-danger" asp-validation-for="Position"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="passCode" class="col-md-2 col-form-label">Passport Code(Optional)</label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="passCode" />
                            <span class="text-danger" asp-validation-for="passCode"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                        <a asp-area="Admin" asp-controller="Speakers" asp-action="GetSpeakers" class="btn btn-light ">Return</a>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col -->
</div>


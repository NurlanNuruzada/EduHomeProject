@model NoticeBoard
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 style="color:cornflowerblue">Create NoticeBoard</h3>
                <form method="post" enctype="multipart/form-data">
                    @*default orarag get dir*@
                    <div class="mb-3 row">
                        <label asp-for="Time" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Time" />
                            <span class="text-danger" asp-validation-for="Time"></span>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Detail" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input class="form-control" asp-for="Detail" />
                            <span class="text-danger" asp-validation-for="Detail"></span>
                        </div>
                    </div>  
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                        <a asp-area="Admin" asp-controller="NoticeBoard" asp-action="Index" class="btn btn-light ">Return</a>
                    </div>
                </form>
            </div>
        </div>
    </div> <!-- end col -->
</div>







